<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/product_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:foreground="?attr/selectableItemBackground"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3D3D3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:id="@+id/textViewTotalQuantity"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textViewTotalGST"
                android:layout_alignStart="@+id/textViewTotalGST" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorAccent"
                android:text=""
                android:id="@+id/textViewTotalGST"
                android:layout_below="@+id/textViewTotalQuantity"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textViewTotalDiscount"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewTotalGST"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textViewTotalAmount"
                android:layout_below="@+id/textViewTotalDiscount"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>