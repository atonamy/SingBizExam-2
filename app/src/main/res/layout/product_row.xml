<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->


    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip"
        >

             <TextView
                 android:layout_width="60dip"
                 android:layout_height="60dip"
                 android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:background="@drawable/product"
                 android:textColor="#040404"
                 android:gravity="center"
        android:id="@+id/textViewQuantity"
                 android:textStyle="bold"
                 />



    </LinearLayout>





    <CheckBox
        android:id="@+id/checkboxSelectedProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        />



    <TextView
        android:id="@+id/productName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dip"
        android:layout_centerVertical="true"
        android:paddingBottom ="9dip"
        android:text=""
        android:textColor="#040404"
        android:textSize="14dip"
        android:textStyle="bold"
        android:typeface="sans"
       />
    


    <TextView
        android:id="@+id/productReference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dip"
        android:text=""
        android:textColor="#343434"
        android:textSize="10dip"

        android:layout_alignLeft="@+id/productName"
        android:layout_alignStart="@+id/productName"
        />


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
		android:layout_marginRight="0dip"
		android:layout_alignTop="@+id/productName"
        android:layout_toLeftOf="@+id/checkboxSelectedProduct"
        android:text=""
        android:textStyle="bold"
        android:textSize="12dip"
        />

    <TextView
        android:id="@+id/productGst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="27dip"
        android:layout_alignParentBottom="@+id/productPrice"
        android:layout_toLeftOf="@+id/checkboxSelectedProduct"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="11dip"
        />

    <TextView
        android:id="@+id/productDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="50dip"
        android:layout_alignParentBottom="@+id/productPrice"
        android:layout_toLeftOf="@+id/checkboxSelectedProduct"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="11dip"
        />


</RelativeLayout>